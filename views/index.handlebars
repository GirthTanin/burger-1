<div class="container">
  <div class="row">
        <div class="col-lg-12 text-center" id="header">
            <h1>EAT DA BURGER!</h1>
        </div>
  </div>

<p>
</p>

  <div class="row">
    <div class="col-md-6 text-center">
      <h2>Burgers to devour!</h2>
    </div>
    <div class="col-md-6 text-center">
        <h2>Burgers you've eaten!</h2>
    </div>
  </div>

  <div class="row">
        {{#each burger}}
          {{#unless this.devoured}}
    <div class="col-md-6 text-center">
        <ul>
            <li>
              {{this.burger_name}}
            </li>
      </ul>
    </div>

    <div class="col-xs-3">
              <form method ="POST" action="/burgers/update/{{this.id}}?_method=PUT">
                <input type="hidden" name="burger_id" value={{this.id}}>
                <button class="btn" type="submit">DEVOUR IT!</button>
              </form>
        </div>
          {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-3 text-center">
        <ul>
          {{#each burger}}
            {{#if this.devoured}}
              <li>
                {{this.burger_name}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

<p>
</p>

  <div class="row">
    <div class="col-lg-12 text-center">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="burgers/create" method="POST">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="newBurger" name="burger_name">
        </div>

        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>
    </div>
   </div>
  </div>
</div>
