    <div class ="row">
            <div class="col-lg-12 text-center" id="header">
                <h1>EAT DA BURGER!</h1>
            </div>
    </div>
    <div class="row">
            <div class="col-s-6 text-center">
                    {{#each burger}}
                        {{#unless this.devoured}}
            <div class="col-s-6 text-center">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    <button type="submit" class="burgerAvailable"> {{this.burger_name}}</button>
                </form>
                        {{/unless}}
                    {{/each}}
                     </div>
             </div>
    </div>
  


